{
  "configurations": {
    "devcontainer": {
      "build": {
        "dockerfile": "../.devcontainer/Dockerfile",
        "context": "../."
      },
      "runArgs": [
        "--mount",
        "type=volume,src=devcontainer-volume,target=/workspaces/.vscode/extensions,nocopy",
        "--mount",
        "type=volume,src=devcontainer-volume-target,target=/workspaces/nocopy",
        "--env=REMOTE_USER=your-username",
        "--env=REMOTE_USER_UID=1000",
        "--env=REMOTE_USER_GID=1000"
      ],
      "workspaceFolder": "/workspaces",
      "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces,type=bind,consistency=cached"
    }
  }
}